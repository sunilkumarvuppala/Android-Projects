<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="app name"
        android:id="@+id/id_appName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/id_releaseDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="dev name"
        android:id="@+id/id_devName"
        android:layout_below="@+id/id_appName"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="release date"
        android:id="@+id/id_releaseDate"
        android:layout_below="@+id/id_devName"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="price"
        android:id="@+id/id_price"
        android:layout_above="@+id/id_category"
        android:layout_alignStart="@+id/id_category" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="category"
        android:id="@+id/id_category"
        android:layout_alignTop="@+id/id_releaseDate"
        android:layout_toEndOf="@+id/id_releaseDate"
        android:layout_marginStart="79dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageStar"
        android:src="@drawable/favoritesgrey"
        android:layout_below="@+id/id_appName"
        android:layout_alignParentEnd="true" />


</RelativeLayout>